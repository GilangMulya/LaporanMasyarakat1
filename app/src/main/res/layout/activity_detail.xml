<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:title="Detail Laporan"
            app:titleTextColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvInfoUtama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="#FFF9C4"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_info"
                                app:tint="#FBC02D"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTitleDetail"
                                android:text="Kategori"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvStatusDetail"
                                android:text="Menunggu..."
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#2563EB"
                                android:background="@drawable/bg_status_blue"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:layout_marginTop="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:layout_marginVertical="20dp"/>

                    <TextView text="LOKASI" android:textSize="11sp" android:textStyle="bold" android:textColor="#9CA3AF" android:letterSpacing="0.05" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvLokasiDetail" android:text="-" android:textSize="15sp" android:textColor="#374151" android:layout_marginTop="4dp" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <TextView text="TANGGAL" android:textSize="11sp" android:textStyle="bold" android:textColor="#9CA3AF" android:letterSpacing="0.05" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvTanggalDetail" android:text="-" android:textSize="15sp" android:textColor="#374151" android:layout_marginTop="4dp" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <TextView text="DESKRIPSI" android:textSize="11sp" android:textStyle="bold" android:textColor="#9CA3AF" android:letterSpacing="0.05" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvIsiDetail" android:text="-" android:textSize="15sp" android:textColor="#374151" android:layout_marginTop="4dp" android:lineSpacingExtra="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <TextView text="BUKTI FOTO" android:textSize="11sp" android:textStyle="bold" android:textColor="#9CA3AF" android:letterSpacing="0.05" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/imgBuktiDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#F5F5F5"
                            android:src="@drawable/ic_image_upload"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Terkini"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/line1"
                        android:layout_width="2dp"
                        android:layout_height="70dp"
                        android:background="#E5E7EB"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="28dp"/>

                    <ImageView
                        android:id="@+id/imgStep1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_modern_wait"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/imgStep1"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true">
                        <TextView
                            android:text="Laporan Dibuat"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvWaktuDibuat"
                            android:text="Menunggu verifikasi admin"
                            android:textColor="#6B7280"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line2"
                        android:layout_width="2dp"
                        android:layout_height="70dp"
                        android:background="#E5E7EB"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="28dp"/>

                    <FrameLayout
                        android:id="@+id/containerStep2"
                        android:layout_width="32dp"
                        android:layout_height="32dp">

                        <ImageView
                            android:id="@+id/imgStep2Static"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_modern_wait" />

                        <ImageView
                            android:id="@+id/imgStep2Loading"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_loading_ring"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/containerStep2"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/tvTextStep2"
                            android:text="Sedang Ditangani"
                            android:textStyle="bold"
                            android:textColor="#9CA3AF"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvDescStep2"
                            android:text="Tim sedang dalam perjalanan"
                            android:textColor="#9CA3AF"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgStep3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_modern_wait"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/imgStep3"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/tvTextStep3"
                            android:text="Laporan Selesai"
                            android:textStyle="bold"
                            android:textColor="#9CA3AF"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Penanganan telah tuntas"
                            android:textColor="#9CA3AF"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCekStatus"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="40dp"
                android:text="Pantau Progres (Live)"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="32dp"
                app:elevation="8dp"
                android:backgroundTint="#2563EB"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>